    <script>
        (function() {
            "use strict";

            // ---------- TIMER ----------
            let timerInterval;
            let timeLeft = 60;
            const timerValueEl = document.getElementById('timerValue');
            const timerInput = document.getElementById('timerInput');
            const startBtn = document.getElementById('startTimerBtn');
            const resetBtn = document.getElementById('resetTimerBtn');

            function updateTimerDisplay() {
                timerValueEl.textContent = timeLeft;
            }

            function startTimer() {
                if (timerInterval) clearInterval(timerInterval);
                if (timeLeft <= 0) {
                    timeLeft = parseInt(timerInput.value) || 60;
                }
                timerInterval = setInterval(() => {
                    if (timeLeft <= 0) {
                        clearInterval(timerInterval);
                        timerInterval = null;
                        // Alerta sutil
                        timerValueEl.style.color = '#ff5555';
                        setTimeout(() => timerValueEl.style.color = '#1e90ff', 1000);
                    } else {
                        timeLeft--;
                        updateTimerDisplay();
                    }
                }, 1000);
            }

            startBtn.addEventListener('click', function() {
                if (timerInterval) clearInterval(timerInterval);
                timeLeft = parseInt(timerInput.value) || 60;
                updateTimerDisplay();
                startTimer();
            });

            resetBtn.addEventListener('click', function() {
                if (timerInterval) clearInterval(timerInterval);
                timerInterval = null;
                timeLeft = parseInt(timerInput.value) || 60;
                updateTimerDisplay();
                timerValueEl.style.color = '#1e90ff';
            });

            // Inicializa timer display
            timeLeft = parseInt(timerInput.value) || 60;
            updateTimerDisplay();

            // ---------- ABAS DE DIAS ----------
            const tabBtns = document.querySelectorAll('.tab-btn');
            const dayCards = {
                segunda: document.getElementById('segunda'),
                quarta: document.getElementById('quarta'),
                quinta: document.getElementById('quinta'),
                sexta: document.getElementById('sexta')
            };

            tabBtns.forEach(btn => {
                btn.addEventListener('click', function(e) {
                    tabBtns.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    const day = this.dataset.day;
                    for (let d in dayCards) {
                        dayCards[d].classList.remove('active');
                    }
                    if (dayCards[day]) dayCards[day].classList.add('active');
                });
            });

            // ---------- SALVAR DADOS NO LOCALSTORAGE ----------
            function saveAllData() {
                const allExercises = [];
                document.querySelectorAll('.exercise-item').forEach((item, index) => {
                    const carga = item.querySelector('.carga')?.value || '0';
                    const reps = item.querySelector('.reps')?.value || '0';
                    const check = item.querySelector('.done-check')?.checked || false;
                    allExercises.push({ carga, reps, check });
                });
                localStorage.setItem('ironlog_training_v1', JSON.stringify(allExercises));
            }

            function loadAllData() {
                const stored = localStorage.getItem('ironlog_training_v1');
                if (stored) {
                    try {
                        const data = JSON.parse(stored);
                        const inputs = document.querySelectorAll('.exercise-item');
                        inputs.forEach((item, idx) => {
                            if (data[idx]) {
                                const cargaField = item.querySelector('.carga');
                                const repsField = item.querySelector('.reps');
                                const checkField = item.querySelector('.done-check');
                                if (cargaField) cargaField.value = data[idx].carga || '0';
                                if (repsField) repsField.value = data[idx].reps || '0';
                                if (checkField) checkField.checked = data[idx].check || false;
                            }
                        });
                    } catch (e) {}
                }
            }

            // Event listeners para salvar automaticamente
            document.addEventListener('input', function(e) {
                if (e.target.classList.contains('carga') || e.target.classList.contains('reps') || e.target.classList.contains('done-check')) {
                    saveAllData();
                }
            });
            document.addEventListener('change', function(e) {
                if (e.target.classList.contains('done-check')) {
                    saveAllData();
                }
            });

            // Carregar dados salvos
            loadAllData();

            // Ajuste timer input min
            timerInput.addEventListener('change', function() {
                let val = parseInt(this.value);
                if (val < 5) this.value = 5;
                if (val > 300) this.value = 300;
                if (!timerInterval) {
                    timeLeft = parseInt(this.value) || 60;
                    updateTimerDisplay();
                }
            });
        })();
    </script>
</body>
</html>
